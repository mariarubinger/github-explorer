{
  "compilerOptions": {                       
    "lib": ["dom", "dom.iterable", "esnext"],                                   
    "allowJs": true,  // pode ter arquivos javascript e typescript               
    "jsx": "react-jsx",  // est치 utilizando o jsx do react, est치 sendo escrito HTML dentro do JS                       
    "noEmit": true, // caso execute o build                             
    "strict": true, // modo de lidar com erros dentro do JS                                
    "moduleResolution": "node", 
    "resolveJsonModule": true, // importar arquivos json
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,     
    "esModuleInterop": true,                        
    "skipLibCheck": true,                         
    "forceConsistentCasingInFileNames": true     
  },
  "include": ["src"] // todo o nosso c칩digo est치 na pasta src
}
